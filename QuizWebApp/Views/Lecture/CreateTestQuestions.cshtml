@model QuizWebApp.Models.Question

@{
    ViewBag.Title = "CreateTestQuestions";
}

<h2>Enter Test Questions</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Display text boxes to create questions -->
    <!-- ------------------------------------------------------------------------------------------------------------------------------------ -->
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Enter Question", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestQuestion, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.TestQuestion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Enter option A", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QA, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Enter option B", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QB, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Enter option C", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QC, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Select correct answer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("QAns", null, htmlAttributes: new { @class = "form-control", @style = "background-color:whitesmoke" })
                @Html.ValidationMessageFor(model => model.QAns, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Enter question mark", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QMark, new { htmlAttributes = new { @class = "form-control", @min = "1" }, @required = "true", @style = "background-color:whitesmoke" })
                @Html.ValidationMessageFor(model => model.QMark, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Question" class="btn btn-default" style="background-color:whitesmoke" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type='button' value='Create Test' id='finishCreate' onClick='redirectOnClick()' style="color:black; background-color:whitesmoke" class="btn btn-default" />
                <script>
                    function redirectOnClick() {
                        document.location = 'AllTestCreated';
                    }
                </script>
            </div>
        </div>
    </div>
    <!-- ------------------------------------------------------------------------------------------------------------------------------------ -->
}

<div>
    @Html.ActionLink("Back to Test Created", "AllTestCreated", null, new { @style = "color:#D25E5A;" })
</div>

