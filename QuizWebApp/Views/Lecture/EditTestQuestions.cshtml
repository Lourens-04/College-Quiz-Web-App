@model QuizWebApp.Models.Question

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Test Questions</h2>
<h3>When at the last question click next question again to save the changes</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Display text boxes to edit questions -->
    <!-- ------------------------------------------------------------------------------------------------------------------------------------ -->
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Question_ID)

        <div class="form-group">
            @Html.Label("Update Question", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestQuestion, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.TestQuestion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Update option A", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QA, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Update option B", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QB, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Update option C", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QC, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Update correct answer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.QAns, null, htmlAttributes: new { @class = "form-control", @style = "background-color:whitesmoke" })
                @Html.ValidationMessageFor(model => model.QAns, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Update question mark", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QMark, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "background-color:whitesmoke" } })
                @Html.ValidationMessageFor(model => model.QMark, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next Question" class="btn btn-default" style="background-color:whitesmoke" />
            </div>
        </div>
    </div>
    <!-- ------------------------------------------------------------------------------------------------------------------------------------ -->
}

<div>
    @Html.ActionLink("Back to Test Created", "AllTestCreated", null, new { @style = "color:#D25E5A;" })
</div>

