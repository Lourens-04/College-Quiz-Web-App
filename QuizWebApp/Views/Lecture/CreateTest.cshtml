@model QuizWebApp.Models.Test

@{
    ViewBag.Title = "CreateTest";
}

<h2>Enter Test Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Display text boxes to create a test -->
    <!-- ------------------------------------------------------------------- -->
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Select the Module", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Module_ID", null, htmlAttributes: new { @class = "form-control", @style = "background-color:whitesmoke" })
                @Html.ValidationMessageFor(model => model.Module_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Type the title", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestTitle, new { htmlAttributes = new { @class = "form-control", @style = "background-color:whitesmoke", @required = "true" } })
                @Html.ValidationMessageFor(model => model.TestDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Type the description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Desc", null, new { @class = "form-control", cols = "50", rows = "5", @style = "color:black; background-color:whitesmoke", @required = "true" })
                @Html.ValidationMessageFor(model => model.TestDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" style="background-color:whitesmoke" />
            </div>
        </div>
    </div>
    <!-- ------------------------------------------------------------------- -->
}

<div>
    @Html.ActionLink("Back to Test Created", "AllTestCreated", null, new { @style = "color:#D25E5A;" })
</div>
